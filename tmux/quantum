black="#2a2a2e"
blacksec="#1b1b1d"
white="#C1C0C0"
whitesec="#939293"
blue="#75BFFF"
red="#EB5368"
green="#87DE74"

set -g status-interval 5
set -g status-style "fg=$white,bg=$black"
set -g status-position top

set-window-option -g window-status-separator ""

set-window-option -g window-status-style fg=$whitesec,bg=$black
set-window-option -g window-status-format "#I #W  "

set-window-option -g window-status-current-style fg=$blue,bg=$black
set-window-option -g window-status-current-format "#I #W  "

set-window-option -g pane-active-border-style fg=$blue
set-window-option -g pane-border-style fg=$blacksec

set-option -g message-style bg=$red,fg=$black

set-window-option -g window-style fg=$whitesec
set-window-option -g window-active-style fg=$white

set-option -g display-panes-active-colour $green
set-option -g display-panes-colour $black

session_name="#[bold,fg=$whitesec,bg=$black] #S"
battery="#(battery)"
date="#[bold,fg=$whitesec,bg=$black]%R"
host="#[bold,fg=$whitesec,bg=$black] #h"

set -g status-left ""
set -g status-right "$date  $battery $session_name $host "
