bg="#2a2a2e"
bg_black="#1b1b1b"
fg_sec="#c3c3c6"
fg_inactive="#58585c"
blue="#75bfff"
red="#f25e72"
green="#87de74"

set -g status-interval 2
set -g status-style fg=$fg_sec,bg=$bg
set -g status-position top

set-window-option -g window-status-separator ""

set-window-option -g window-status-style fg=$fg_inactive
# set-window-option -g window-status-format "#[fg=$fg_inactive]▏ #[fg=$fg_alt]#I #W #[fg=$fg_alt]▕"
set-window-option -g window-status-format "#I #W  "

set-window-option -g window-status-current-style fg=$fg_sec,bg=$bg
# set-window-option -g window-status-current-format "#[fg=$fg_sec]▏ #[fg=$fg_sec]#I #W #[fg=$fg_inactive]▕"
set-window-option -g window-status-current-format "#I #W  "

set-window-option -g pane-active-border-style fg=$fg_sec
set-window-option -g pane-border-style fg=$bg_black

set-option -g message-style bg=$green,fg=$bg

set-window-option -g window-style fg=$fg_inactive
set-window-option -g window-active-style fg=$fg_sec

set-option -g display-panes-active-colour $green
set-option -g display-panes-colour $fg_sec

date="#[bold,fg=$fg_sec]%R"
battery="#(battery.tmux)"
temperature="#(temperature.tmux)"
host="#[bold,fg=$fg_sec] #h"
session_name="#[bold,fg=$fg_sec] #S"

set -g status-left ""
set -g status-right "$date  $battery  $temperature $session_name $host "
